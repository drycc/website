<ul class="<%= class_name %>">
  <% for (var i in theme.menu_secondary){ %>
    <% 
      var clsName = "";
      if (is_post() && i == "Archive") {
        clsName = "active dotted";
      } else if (is_home() && i == "Home") {
        clsName = "active";
      } else if (is_archive() && i == "Archive") {
        clsName = "active";
      } else {
          if (theme.menu_secondary[i].substring(1)+"/index.html" == path) {
            clsName = "active";
          }
      }
    %>
  <li class="nav-item <%= clsName %>">
    <a class="nav-item-link" href="<%- url_for(theme.menu_secondary[i]) %>"><%= i %></a>
  </li>
  <% } %>
</ul>