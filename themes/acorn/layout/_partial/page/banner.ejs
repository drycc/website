<div class="banner mb-5">
  <% if (page.banner) { %>
    <div class="banner mb-5">
      <img class="banner-img" src="<%- page.banner %>" itemprop="image">
    </div>
  <% } %>
  <div class="banner-text text-center">
    <!-- page-type-title -->
    <% if (!is_post()) { %>
      <%- partial('title') %>
    <% } %>
    <!-- page-type-slogan -->
    <h4 class="slogan font-w-lighter">
    <% if (page.slogan) { %>
      <%- page.slogan %>
    <% } else if (is_archive()) { %>
      <%- theme.slogan.archives %>
    <% } else if (is_page()) { %>
      <%- theme.slogan.pages %>
    <% } else {%>
      <%- theme.slogan.posts %>
    <% } %>
    </h4>
  </div>
</div>